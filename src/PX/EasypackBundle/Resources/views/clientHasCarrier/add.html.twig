{% extends 'PXEasypackBundle::layout.html.twig' %}

{% block title %}
    Nouveau Configuration -
{% endblock %}

{% block easypack_block %}
    {{ include("PXEasypackBundle:clientHasCarrier:form.html.twig") }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
  <script>
            jQuery(document).ready(function() {
                $('#types').on('change', function () {
                    $('.form').addClass('formhidden');
                    $('#' + $(this).val()).removeClass('formhidden');
                });


                $('#clients').on('change', function () {

                    var id =$(this).val();

                    $('#clientId').val(id);

                });
            });
    </script>

    <style>

        .formhidden{
            display: none;
        }
    </style>
{% endblock %}
