<h4>Nouveau Client</h4>

<div class="well">
    {{ form_start(form , {'attr' : {'class' : 'form-horizontal'}}) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.name , "Nom client" , {'label_attr' : {'class' : 'col-sm-3 control-label'}}) }}
        {{ form_errors(form.name) }}

        <div class="col-sm-4">
            {{ form_widget(form.name , {'attr' : {'class' : 'form-control'}}) }}
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-3">
        </div>
        <div class="col-sm-4">

            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
</div>